FROM c7_core
MAINTAINER Pavan Gupta <pavan.gupta@gslab.com>

RUN yum install -y autoconf

#------------------------------------------------------------------------------
# Build PHP From Source
#------------------------------------------------------------------------------
RUN yum install -y libxml2-devel
RUN wget -O php-5.5.14.tar.gz http://us.php.net/get/php-5.5.14.tar.gz/from/this/mirror && \
	tar -zxvf php-5.5.14.tar.gz && \
	cd php-5.5.14 && \
	./configure --enable-debug && \
	make && \
	make install && \
	cp php.ini-development /usr/local/lib/php.ini

echo "extension=/root/jenkins_work/workspace/php_conn_ubuntu/src/aerospike/modules/aerospike.so" >> /usr/local/lib/php.ini

RUN sed -i 's/port 9918/port 9955/' /etc/aerospike/aerospike.conf
